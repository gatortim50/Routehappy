<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Remove', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_post_path, class: 'btn btn-success btn-xs' do %>
  <i class="glyphicon glyphicon-plus"></i> New Post
<% end %>
