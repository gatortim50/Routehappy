<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<% @post_attachments.each do |p| %>
  <%= image_tag p.avatar_url, :style => "width: 300px; height: 250px;"  %>
  <%= link_to "Edit", edit_post_attachment_path(p) %>
<% end %>


<%= link_to posts_path, class: 'btn btn-info btn-xs' do %>
  <i class="glyphicon glyphicon-left"></i> Back
<% end %>